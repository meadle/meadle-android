<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="MeadleTheme" parent="android:Theme.Holo.Light">

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/MeadleTheme.ActionBarStyle</item>

    </style>

    <style name="MeadleTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:logo">@drawable/logo_flat</item>
        <item name="android:titleTextStyle">@style/MeadleTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MeadleTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="MeadleTheme.NumberButtonStyle" >
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

</resources>
